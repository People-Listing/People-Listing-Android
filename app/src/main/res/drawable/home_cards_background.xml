<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape>
            <corners android:radius="28dp" />
            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="#EFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <corners android:radius="28dp" />
            <gradient
                android:angle="270"
                android:type="radial"
                android:gradientRadius="460dp"
                android:endColor="#00FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>

</layer-list>